<!DOCTYPE html>
<html>
  <head>
    <title>BookReview</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default">

      <div class="container" id="nb1">

        <div class="navbar-header">
          <%= link_to image_tag('logo.png'), url_for(root_path), class: "navbar-brand", id:"logo" %>
        </div>
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
              <li><%= link_to "Add Book", new_book_path, class:"btn btn-sm btn-default"%></li>
              <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete, class:"btn btn-sm btn-default" %></li>
          <% else %>
              <li><%= link_to "Log In", new_user_session_path, class:"btn btn-sm btn-default" %></li>
              <li><%= link_to "Sign Up", new_user_registration_path, class:"btn btn-sm btn-default" %></li>
          <% end %>
        </ul>
      </div>

    </nav>
    <div class="container" style="margin-top: 5%;">
      <%= yield %>
    </div>
  </body>
</html>
